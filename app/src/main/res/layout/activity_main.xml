<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_road"
    android:layoutDirection="ltr"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id ="@+id/heart_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin">

        <ImageView
            android:id="@+id/Main_IMG_heart1"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/Main_IMG_heart2"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/Main_IMG_heart3"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            app:srcCompat="@drawable/heart" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/control_container"
        android:layout_below="@id/heart_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box1"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box2"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box3"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box4"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box5"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box6"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box7"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box8"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box9"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box10"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box11"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box12"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box13"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box14"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box15"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMG_box16"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box17"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box18"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IMG_box19"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box20"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/IMG_box21"
                style="@style/Obstacle_style"
                app:srcCompat="@drawable/box" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/car_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Main_carLeft"
                android:layout_width="0dp"
                android:layout_height="@dimen/car_size"
                android:layout_weight="1"
                app:srcCompat="@drawable/car" />

            <ImageView
                android:id="@+id/Main_carCenter"
                android:layout_width="0dp"
                android:layout_height="@dimen/car_size"
                android:layout_weight="1"
                app:srcCompat="@drawable/car" />

            <ImageView
                android:id="@+id/Main_carRight"
                android:layout_width="0dp"
                android:layout_height="@dimen/car_size"
                android:layout_weight="1"
                app:srcCompat="@drawable/car" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:id="@+id/control_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_FAB_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:icon ="@drawable/left_button"
            app:iconTint="@color/white"
            app:iconGravity="end"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/move_left"
            />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_FAB_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:clickable="true"
            app:icon ="@drawable/right_button"
            app:iconTint="@color/white"
            app:iconGravity="start"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/move_right"
            />
    </RelativeLayout>

</RelativeLayout>